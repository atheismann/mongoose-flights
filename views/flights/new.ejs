<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline">
    <option value="AAL">American</option>
    <option value="WN">Southwest</option>
    <option value="UAL">United</option>
  </select>
  <label>Flight Number:</label>
  <input type="text" name="flightNo">
  <label>Departure Date:</label>
  <input type="datetime-local" name="departs">
  <input type="submit" value="Add Flight">
</form>

